<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="550" prefWidth="732.0" xmlns="http://javafx.com/javafx/8.0.999-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="rigor.io.junkshop.ui.sales.SalesPresenter">
  <BorderPane prefHeight="550" prefWidth="825" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <left>
      <BorderPane prefHeight="550" prefWidth="200.0" BorderPane.alignment="CENTER">
        <center>
          <AnchorPane prefHeight="550.0" prefWidth="321.0" BorderPane.alignment="CENTER">
            <JFXComboBox fx:id="materialBox" layoutX="14.0" layoutY="39.0" onAction="#selectMaterial" prefHeight="37.0"
                         prefWidth="164.0" promptText="Select Material"/>
            <JFXTextField fx:id="priceText" layoutX="14.0" layoutY="313.0" prefHeight="37.0" prefWidth="75.0"
                          promptText="Price...">
              <font>
                <Font size="16.0"/>
              </font>
            </JFXTextField>
            <JFXTextField fx:id="weightText" layoutX="14.0" layoutY="241.0" prefHeight="37.0" prefWidth="75.0"
                          promptText="Weight...">
              <font>
                <Font size="16.0"/>
              </font>
            </JFXTextField>
            <JFXButton fx:id="addButton" layoutX="11.0" layoutY="484.0" mnemonicParsing="false" onAction="#addItem"
                       prefHeight="37.0" prefWidth="95.0" style="-fx-background-color: #8BC34A;" text="Add Item"
                       textFill="WHITE">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </JFXButton>
            <JFXButton fx:id="deleteButton" layoutX="111.0" layoutY="484.0" mnemonicParsing="false"
                       onAction="#deleteItem" prefHeight="37.0" prefWidth="73.0" style="-fx-background-color: #FF3D00;"
                       text="Delete" textFill="WHITE">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </JFXButton>
            <Label layoutX="14.0" layoutY="14.0" text="Material" textFill="#404040">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </Label>
            <Label layoutX="14.0" layoutY="288.0" text="Price:" textFill="#404040">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </Label>
            <Label layoutX="14.0" layoutY="216.0" text="Weight:" textFill="#404040">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </Label>
            <Label layoutX="14.0" layoutY="144.0" text="Available:">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </Label>
            <Label fx:id="quantityLabel" layoutX="14.0" layoutY="171.0" text="0.0">
              <font>
                <Font size="24.0"/>
              </font>
            </Label>
            <Label layoutX="14.0" layoutY="361.0" text="Note" textFill="#404040">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </Label>
            <JFXTextArea fx:id="noteText" layoutX="14.0" layoutY="386.0" prefHeight="80.0" prefWidth="164.0"
                         promptText="Note...">
              <font>
                <Font size="16.0"/>
              </font>
            </JFXTextArea>
            <JFXTextField fx:id="otherText" layoutX="15.0" layoutY="90.0" prefHeight="37.0" prefWidth="165.0"
                          promptText="Other...">
              <font>
                <Font size="16.0"/>
              </font>
            </JFXTextField>
          </AnchorPane>
        </center>
      </BorderPane>
    </left>
    <center>
      <BorderPane prefHeight="550.0" prefWidth="387.0" BorderPane.alignment="CENTER">
        <top>
          <VBox alignment="TOP_RIGHT" prefHeight="90.0" prefWidth="532.0" BorderPane.alignment="CENTER">
            <padding>
              <Insets right="5.0"/>
            </padding>
            <Label fx:id="loadingLabel" text="Loading info...">
              <font>
                <Font name="System Bold Italic" size="15.0"/>
              </font>
            </Label>
            <JFXButton fx:id="purchaseButton" mnemonicParsing="false" onAction="#purchaseItems" prefHeight="37.0"
                       prefWidth="143.0" style="-fx-background-color: #8BC34A;" text="Purchase" textFill="WHITE">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </JFXButton>
            <Hyperlink onAction="#viewPurchaseHistory" prefHeight="33.0" prefWidth="139.0" text="Purchase History">
              <font>
                <Font name="System Bold" size="16.0"/>
              </font>
            </Hyperlink>
          </VBox>
        </top>
        <center>
          <BorderPane fx:id="receiptBox" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
              <TableView fx:id="purchaseTable" prefHeight="350.0" prefWidth="512.0" BorderPane.alignment="CENTER">
                <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0"/>
                </BorderPane.margin>
              </TableView>
            </center>
            <top>
              <BorderPane prefHeight="37.0" prefWidth="532.0" BorderPane.alignment="CENTER">
                <left>
                  <HBox prefHeight="71.0" prefWidth="258.0" BorderPane.alignment="CENTER">
                    <padding>
                      <Insets left="10.0"/>
                    </padding>
                    <Label text="Receipt #: ">
                      <font>
                        <Font size="15.0"/>
                      </font>
                      <HBox.margin>
                        <Insets top="10.0"/>
                      </HBox.margin>
                    </Label>
                    <JFXTextField fx:id="receiptNumber">
                      <font>
                        <Font size="15.0"/>
                      </font>
                    </JFXTextField>
                  </HBox>
                </left>
                <center>
                  <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <padding>
                      <Insets right="10.0" top="10.0"/>
                    </padding>
                    <Label fx:id="date" text="2019-05-05">
                      <font>
                        <Font size="15.0"/>
                      </font>
                    </Label>
                  </HBox>
                </center>
              </BorderPane>
            </top>
            <bottom>
              <BorderPane prefHeight="33.0" prefWidth="532.0" BorderPane.alignment="CENTER">
                <center>
                  <HBox alignment="TOP_RIGHT" prefHeight="87.0" prefWidth="532.0" BorderPane.alignment="CENTER">
                    <padding>
                      <Insets right="10.0"/>
                    </padding>
                    <Label text="GRAND TOTAL: ">
                      <font>
                        <Font name="System Bold" size="20.0"/>
                      </font>
                    </Label>
                    <Label fx:id="totalTextbox" text="P 1,000,000.00">
                      <font>
                        <Font name="System Bold" size="20.0"/>
                      </font>
                    </Label>
                  </HBox>
                </center>
              </BorderPane>
            </bottom>
          </BorderPane>
        </center>
      </BorderPane>
    </center>
  </BorderPane>
</AnchorPane>
