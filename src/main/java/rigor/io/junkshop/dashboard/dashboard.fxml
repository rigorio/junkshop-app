    </AnchorPane>
    <TableView fx:id="junkTable" prefHeight="176.0" prefWidth="873.0" VBox.vgrow="ALWAYS">
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
  </VBox>
