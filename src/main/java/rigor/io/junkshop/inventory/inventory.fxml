<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="550" prefWidth="640" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rigor.io.junkshop.inventory.InventoryPresenter">
  <BorderPane prefHeight="550" prefWidth="640" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <top>
      <AnchorPane prefHeight="86.0" prefWidth="640" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
        <JFXComboBox fx:id="materialBox" layoutX="14.0" layoutY="19.0" onAction="#selectMaterial" prefWidth="150.0" promptText="Material" />
        <JFXTextField fx:id="priceText" layoutX="179.0" layoutY="19.0" promptText="Price" />
        <JFXTextField fx:id="weightText" layoutX="330.0" layoutY="19.0" promptText="Weight" />
        <JFXButton layoutX="479.0" layoutY="19.0" mnemonicParsing="false" onAction="#addItem" style="-fx-background-color: #8BC34A;" text="Add Item" textFill="WHITE">
          <font>
            <Font name="System Bold" size="12.0" />
          </font>
        </JFXButton>
        <Hyperlink layoutX="14.0" layoutY="55.0" onAction="#viewDailySummaries" text="View Daily Summaries" />
      </AnchorPane>
    </top>
    <center>
      <TableView fx:id="junkTable" prefHeight="472.0" prefWidth="640.0" BorderPane.alignment="CENTER">
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <BorderPane.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" />
        </BorderPane.margin>
      </TableView>
    </center>
  </BorderPane>
</AnchorPane>
