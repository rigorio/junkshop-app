      <font>
        <Font name="System Bold" size="12.0" />
      </font>
    </JFXButton>
    <JFXButton mnemonicParsing="false" prefHeight="60.0" prefWidth="193.0" style="-fx-background-color: #546E7A;" text="Sales Summary" textFill="WHITE">
      <font>
        <Font name="System Bold" size="12.0" />
      </font>
    </JFXButton>
    <JFXButton mnemonicParsing="false" prefHeight="60.0" prefWidth="193.0" style="-fx-background-color: #546E7A;" text="Button" textFill="WHITE">
      <font>
        <Font name="System Bold" size="12.0" />
      </font>
    </JFXButton>
  </VBox>
